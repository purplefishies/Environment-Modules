#%Module1.0#####################################################################
##
## modules samples
##
## modulefiles/modules.  Created for loading  /building samples
##
proc ModulesHelp { } {
    global version prefix
    puts stderr "\tlatest - loads the latest samples build environment"
    puts stderr ""
}

module-whatis	"Loads environment for building samples"

prereq usb

prereq aio

# for Tcl script use only
set	sample_version	latest
set     SAMPLE_ROOT            $::env(HOME)/Projects/Linux
set     SAMPLE_USB_ROOT        ${SAMPLE_ROOT}/USB/AIOUSB-Latest/USB/AIOUSB/samples

setenv          SAMPLE_ROOT            ${SAMPLE_ROOT}
setenv          SAMPLE_USB_ROOT        ${SAMPLE_USB_ROOT}

#set-alias build_samples "cd ${SAMPLE_DIR} && make "
#set-alias clean_samples "cd ${SAMPLE_DIR} && make clean"
